<!-- Vistas de zapatillas-->

    <record model="ir.ui.view" id="odooalmacen.inversor_list_view">
      <field name="name">odooalmacen.inversor.view.tree</field>
      <field name="model">odooalmacen.inversor</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="nombre"/>
        </tree>
      </field>
    </record>

<!-- search -->

    <record model="ir.ui.view" id="odooalmacen.inversor_search_view">
      <field name="name">odooalmacen.inversor.view.search</field>
      <field name="model">odooalmacen.inversor</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="nombre"/>
          <group>
            <filter name="group_by_nombre" string="nombre" context="{'gropup_by':'nombre'}" />
          </group>
        </search>
      </field>
    </record>

    
    <!-- form -->
    
    <record model="ir.ui.view" id="odooalmacen.inversor_form_view">
      <field name="name">odooalmacen.inversor.view.form</field>
      <field name="model">odooalmacen.inversor</field>
      <field name="arch" type="xml">
        <form string="Información inversor">
          <sheet>
            <div class="oe_title">
              <h1>
                ID <field name="name" placeholder="id"/>
              </h1>
            </div>
            <group>
              <group>
                <separator string="Datos"/>
                <field name="nombre" placeholder="nombre"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>

    </record>








    <!-- Definición de menús-->

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="odooalmacen.inversor_action_window">
      <field name="name">inversor</field>
      <field name="res_model">odooalmacen.inversor</field>
      
    </record>

    <menuitem name="odooalmacen" id="odooalmacen.menu_root"/>
    <menuitem name="inversor" id="odooalmacen.menu_inversor" parent="odooalmacen.menu_root"/>
    <menuitem name="Lista" id="odooalmacen.menu_inversor_list" parent="odooalmacen.menu_inversor"
              action="odooalmacen.inversor_action_window"/>
